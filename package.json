{
  "name": "react-static-tweets",
  "private": true,
  "description": "Extremely fast static renderer for tweets.",
  "repository": "transitive-bullshit/react-static-tweets",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "workspaces": [
    "packages/*",
    "example/"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:tsc": "tsc --build",
    "build:tsup": "lerna run build --no-private",
    "watch": "run-p watch:* --continue-on-error",
    "watch:tsc": "tsc --build --watch  --preserveWatchOutput",
    "watch:tsup": "lerna run watch --no-private --parallel",
    "prebuild": "run-s clean",
    "prewatch": "run-s clean",
    "dev": "run-s watch",
    "start": "run-s watch",
    "clean": "del packages/*/build",
    "test": "run-s test:*",
    "test:prettier": "prettier '**/*.{js,jsx,json,ts,tsx}' --check",
    "publish": "lerna publish",
    "bootstrap": "lerna bootstrap",
    "postinstall": "run-s bootstrap"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "del-cli": "^4.0.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "tsup": "^6.1.0",
    "typescript": "^4.6.2"
  }
}
